<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context="com.saber.cz.a1006tv.MainActivity">
<FrameLayout
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_weight="9.2"
    android:layout_height="0dp">


</FrameLayout>
<RadioGroup
    android:id="@+id/radioGroup_main"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_weight="0.8"
    android:layout_height="0dp">

    <RadioButton
        android:id="@+id/video"
        android:background="@drawable/tab"
        android:text="视频"
        android:textSize="12sp"
        android:paddingTop="15dp"
        android:paddingBottom="7dp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/video"
        android:gravity="bottom|center"
        android:button="@null"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <RadioButton
        android:id="@+id/cache"
        android:background="@drawable/tab"
        android:text="缓存"
        android:textSize="12sp"
        android:paddingTop="15dp"
        android:paddingBottom="7dp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/cache"
        android:gravity="bottom|center"
        android:button="@null"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <RadioButton
        android:id="@+id/zhibo"
        android:background="@drawable/tab"
        android:drawableTop="@drawable/zhibo"
        android:textSize="2sp"
        android:button="@null"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <RadioButton
        android:id="@+id/tool"
        android:background="@drawable/tab"
        android:text="工具"
        android:textSize="12sp"
        android:paddingTop="15dp"
        android:paddingBottom="7dp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/tool"
        android:gravity="bottom|center"
        android:button="@null"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <RadioButton
        android:id="@+id/setting"
        android:background="@drawable/tab"
        android:text="设置"
        android:textSize="12sp"
        android:paddingTop="15dp"
        android:paddingBottom="7dp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/setting"
        android:gravity="bottom|center"
        android:button="@null"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />



</RadioGroup>
</LinearLayout>
